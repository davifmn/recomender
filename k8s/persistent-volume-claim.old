apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: davi-model-pvc
spec:
  # PROBLEMA 1: Selector é para provisionamento estático e entra em conflito com storageClassName.
  selector:
    matchLabels:
      namespace: davineves
  
  # PROBLEMA 2: Esta StorageClass provavelmente não existe no seu cluster.
  storageClassName: default-storage-class-davineves
  
  # PROBLEMA 3: ReadWriteMany não é suportado por provedores de nuvem padrão (GCP, AWS, Azure).
  accessModes:
    - ReadWriteMany
  
  resources:
    requests:
      storage: 1Gi
